pipeline {
    agent {
        label 'docker-jenkins-agent'  // Use the Docker template label
    }
    environment {
        DOCKER_IMAGE = "amundead/nginx-hello-world"   // Docker image without tag
        DOCKER_TAG = "v1.11"
        DOCKER_FULL_IMAGE = "${DOCKER_IMAGE}:${DOCKER_TAG}"
        NAMES_SPACE = "dev-app-awam"  // Namespace for deployment in k8s
    }
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: "https://github.com/amundead/test-repo.git"  // Clone your GitHub repo
            }
        }
        
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $DOCKER_FULL_IMAGE .'  // Build Docker image
            }
        }

        stage('Push Docker Image to Docker Hub') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials-id', passwordVariable: 'DOCKERHUB_CREDENTIALS_PSW', usernameVariable: 'DOCKERHUB_CREDENTIALS_USR')]) {
                        sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                        sh 'docker push $DOCKER_FULL_IMAGE'  // Push Docker image to Docker Hub
                    }
                }
            }
        }

        stage('Get Docker Image Digest') {
            steps {
                script {
                    // Get Docker image digest after the push
                    def digest = sh(script: "docker inspect --format='{{index .RepoDigests 0}}' $DOCKER_FULL_IMAGE", returnStdout: true).trim()
                    env.DOCKER_DIGEST = digest.split("@")[1]  // Extract only the digest part
                }
            }
        }

        stage('Update Kubernetes Manifest with Digest') {
            steps {
                script {
                    // Update deployment manifest with the new image digest
                    sh "sed -i 's|{{NEW_DOCKER_DIGEST}}|$DOCKER_DIGEST|g' /home/jenkins/workspace/CI-CD-hellowordtomyhome/deploy/deployment.yaml"
                    
                    // List the directory to ensure files are visible
                    sh 'ls -R /home/jenkins/workspace/CI-CD-hellowordtomyhome/'
                    
                    // Commit and push changes to Git
                    dir('/home/jenkins/workspace/CI-CD-hellowordtomyhome/deploy') {
                        withCredentials([usernamePassword(credentialsId: 'github-credentials-id', passwordVariable: 'GITHUB_PASSWORD', usernameVariable: 'GITHUB_USERNAME')]) {
                            
                            // Configure Git user
                            sh "git config user.name '$GITHUB_USERNAME'"
                            sh "git config user.email '${GITHUB_USERNAME}@yahoo.com'"
                            
                            // Check git status to see if there are any changes
                            sh 'git status'
                            
                            // Check if there are any changes using git diff
                            def changes = sh(script: "git diff --name-only", returnStdout: true).trim()
                            if (changes) {
                                // If there are changes, add the file and commit
                                sh "git add deployment.yaml"
                                sh "git commit -m 'Update image to ${DOCKER_IMAGE}@${DOCKER_DIGEST}'"
                                
                                // Push changes to GitHub
                                sh "git push https://$GITHUB_USERNAME:$GITHUB_PASSWORD@github.com/amundead/test-repo.git HEAD:main"
                            } else {
                                // No changes to commit
                                echo "No changes detected in deployment.yaml, skipping commit."
                            }
                        }
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment to Kubernetes development cluster successful! ArgoCD will automatically sync.'
        }
        failure {
            echo 'Deployment failed! haha'
        }
    }
}
