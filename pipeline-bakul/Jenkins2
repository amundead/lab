//Pipeline by Amir@Mindef v1.00

pipeline {
    agent {
        label 'jenkins-linux-agent-TLS'
    }
    
    environment {
        HARBOR_REGISTRY = 'bakul.mod.gov.my'
        HARBOR_PROJECT  = 'testing-app'
        HARBOR_IMAGE    = 'myapp'
        IMAGE_NAME_HARBOR = "${HARBOR_REGISTRY}/${HARBOR_PROJECT}/${HARBOR_IMAGE}"
        TAG = 'v1.03'
        DOCKERFILE_LOCATION = './Dockerfile'
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'YOUR_CREDENTIALS_ID',
                    url: 'https://github.com/amundead/lab.git'
            }
        }

        stage('Check Dockerfile Location') {
            steps {
                script {
                    if (fileExists(DOCKERFILE_LOCATION)) {
                        echo "Dockerfile found at ${DOCKERFILE_LOCATION}"
                    } else {
                        error "Dockerfile not found at ${DOCKERFILE_LOCATION}"
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build(
                        "${IMAGE_NAME_HARBOR}:${TAG}",
                        "--no-cache -f ${DOCKERFILE_LOCATION} ."
                    )
                }
            }
        }

        stage('Tag and Push Docker Image to Harbor') {
            steps {
                script {
                    docker.withRegistry("https://${HARBOR_REGISTRY}", 'bakul-testing-app') {
                        docker.image("${IMAGE_NAME_HARBOR}:${TAG}").push()
                    }
                }
            }
        }

        stage('Clean up') {
            steps {
                script {
                    sh "docker rmi ${IMAGE_NAME_HARBOR}:${TAG} || true"
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
